<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.10.2 -->
<interface>
  <!-- interface-name dialog-vkbasalt.ui -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="VkBasaltDialog" parent="GtkWindow">
    <property name="default-width">550</property>
    <property name="modal">True</property>
    <property name="title" translatable="yes">vkBasalt Settings</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="show-end-title-buttons">False</property>
            <child type="start">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkButton" id="btn_cancel">
                    <property name="label" translatable="yes">_Cancel</property>
                    <property name="use_underline">True</property>
                    <property name="action_name">window.close</property>
                  </object>
                </child>
                <child>
                  <object class="GtkShortcutController">
                    <child>
                      <object class="GtkShortcut">
                        <property name="trigger">Escape</property>
                        <property name="action">action(window.close)</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="btn_help">
                    <property name="label" translatable="yes">_?</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_save">
                <property name="label" translatable="yes">Save</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesPage">
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Default</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="activatable-widget">default</property>
                    <property name="title" translatable="yes">Default Settings</property>
                    <child>
                      <object class="GtkSwitch" id="default">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="description" translatable="yes">Effects are applied according to the list order.</property>
                <property name="title" translatable="yes">Effects</property>
                <child>
                  <object class="AdwExpanderRow" id="cas">
                    <property name="show_enable_switch">True</property>
                    <property name="title" translatable="yes">Contrast Adaptive Sharpening</property>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Sharpness</property>
                            <child>
                              <object class="GtkMenuButton">
                                <property name='valign'>center</property>
                                <property name="tooltip-text" translatable="yes">Select</property>
                                <property name="icon-name">info-symbolic</property>
                                <property name="popover">popover_cas_sharpness</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="cas_sharpness">
                                    <property name="lower">-1.0</property>
                                    <property name="step-increment">0.1</property>
                                    <property name="upper">1.0</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwExpanderRow" id="dls">
                    <property name="show_enable_switch">True</property>
                    <property name="title" translatable="yes">Denoised Luma Sharpening</property>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Sharpness</property>
                            <child>
                              <object class="GtkMenuButton">
                                <property name='valign'>center</property>
                                <property name="tooltip-text" translatable="yes">Select</property>
                                <property name="icon-name">info-symbolic</property>
                                <property name="popover">popover_dls_sharpness</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="dls_sharpness">
                                    <property name="step-increment">0.1</property>
                                    <property name="upper">1.0</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Denoise</property>
                            <child>
                              <object class="GtkMenuButton">
                                <property name='valign'>center</property>
                                <property name="tooltip-text" translatable="yes">Select</property>
                                <property name="icon-name">info-symbolic</property>
                                <property name="popover">popover_dls_denoise</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="dls_denoise">
                                    <property name="step-increment">0.1</property>
                                    <property name="upper">1.0</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwExpanderRow" id="fxaa">
                    <property name="show_enable_switch">True</property>
                    <property name="title" translatable="yes">Fast Approximate Anti-Aliasing</property>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Subpixel Quality</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="fxaa_subpixel_quality">
                                    <property name="step-increment">0.1</property>
                                    <property name="upper">1.0</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Quality Edge Threshold</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="fxaa_quality_edge_threshold">
                                    <property name="step-increment">0.1</property>
                                    <property name="upper">1.0</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Quality Edge Threshold Minimum</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="fxaa_quality_edge_threshold_min">
                                    <property name="step-increment">0.01</property>
                                    <property name="upper">0.1</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwExpanderRow" id="smaa">
                    <property name="show_enable_switch">True</property>
                    <property name="title" translatable="yes">Subpixel Morphological Anti-Aliasing</property>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Edge Detection</property>
                            <child>
                              <object class="GtkBox">
                                <child>
                                  <object class="GtkToggleButton" id="luma">
                                    <property name="label" translatable="yes">Luma</property>
                                    <property name="active">True</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkToggleButton" id="color">
                                    <property name="label" translatable="yes">Color</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                                <style>
                                  <class name="linked"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Threshold</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="digits">2</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="smaa_threshold">
                                    <property name="step-increment">0.05</property>
                                    <property name="upper">0.5</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Max Search Steps</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="smaa_max_search_steps">
                                    <property name="step-increment">10</property>
                                    <property name="upper">112</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Max Search Steps Diagonal</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="smaa_max_search_steps_diagonal">
                                    <property name="step-increment">2</property>
                                    <property name="upper">20</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Max Corner Rounding</property>
                            <child>
                              <object class="GtkSpinButton">
                                <property name='numeric'>true</property>
                                <property name='valign'>center</property>
                                <property name="adjustment">
                                  <object class="GtkAdjustment" id="smaa_corner_rounding">
                                    <property name="step-increment">10</property>
                                    <property name="upper">100</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwExpanderRow" id="clut">
                    <property name="show_enable_switch">True</property>
                    <property name="title" translatable="yes">Color Lookup Table</property>
                    <child>
                      <object class="AdwPreferencesRow">
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Path</property>
                            <child>
                              <object class="GtkEntry" id="input_entry">
                                <property name="hexpand">True</property>
                                <property name="valign">center</property>
                                <property name="editable">False</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="lut_file_path">
                                <property name='valign'>center</property>
                                <property name="tooltip-text" translatable="yes">Select</property>
                                <property name="icon-name">paper-symbolic</property>
                                <style>
                                  <class name="flat"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Miscellaneous</property>
                <child>
                  <object class="AdwActionRow" id="row_disable_on_launch">
                    <property name="activatable-widget">switch_disable_on_launch</property>
                    <property name="title" translatable="yes">Disable on Launch</property>
                    <child>
                      <object class="GtkSwitch" id="switch_disable_on_launch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <object class="GtkPopover" id="popover_cas_sharpness">
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkLabel">
            <property name="xalign">0</property>
            <property name="wrap">True</property>
            <property name="wrap-mode">word-char</property>
            <property name="ellipsize">none</property>
            <property name="lines">4</property>
            <property name="use-markup">True</property>
            <property name="max-width-chars">40</property>
            <property name="label" translatable="yes">CAS sharpness decreases or increases sharpness of a given game. Games may look clearer, but also cause artifacts or overshapened edges. If the value is lower than 0, the sharpness of the game will be lower than native.
            </property>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="popover_dls_sharpness">
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkLabel">
            <property name="xalign">0</property>
            <property name="wrap">True</property>
            <property name="wrap-mode">word-char</property>
            <property name="ellipsize">none</property>
            <property name="lines">4</property>
            <property name="use-markup">True</property>
            <property name="max-width-chars">40</property>
            <property name="label" translatable="yes">DLS sharpness increases sharpness of a given game. Games may look clearer, but also cause artifacts or overshapened edges. The lower the value, the less sharp it is.
            </property>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="popover_dls_denoise">
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkLabel">
            <property name="xalign">0</property>
            <property name="wrap">True</property>
            <property name="wrap-mode">word-char</property>
            <property name="ellipsize">none</property>
            <property name="lines">4</property>
            <property name="use-markup">True</property>
            <property name="max-width-chars">40</property>
            <property name="label" translatable="yes">DLS denoise decreases the amount of noise in a given game. Games may look cleaner and less oversharpened, but may also cause to look more washed out and less detailed.
            </property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>


